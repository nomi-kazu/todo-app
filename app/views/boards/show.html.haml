.board   
  .board_title
    = @board.title
    - if user_signed_in? && current_user.has_written?(@board)
      .dropdown
        = image_tag 'Combined Shape.png', class: 'dropbtn'
        .dropdown-content
          = link_to 'Edit', edit_board_path(@board, @task)
          = link_to 'Delete', board_path(@board, @task), data: { method: 'delete', confirm: '本当に削除してもよろしいですか？'}
  .board_content
    = @board.content
  .board_detail
    = image_tag 'Oval.png'
    %div
      %p= @board.author_name

.container
  %h2 All Tasks  
  - @tasks.each do |task|
    = link_to board_task_path(board_id: task.board_id, id: task.id) do
      .board 
        - if task.eyecatch.attached?
          .board_image
            = image_tag task.eyecatch
        .board_title
          = task.title
        .board_content
          = task.content
        .board_detail
          = image_tag 'Oval.png'
          = task.deadline
          %div
            %p= task.author_name
  .board_add
    = link_to '+ Add new task', new_board_task_path(@board) 
  
  