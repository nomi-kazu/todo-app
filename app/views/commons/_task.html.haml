= link_to board_task_path(board_id: task.board_id, id: task.id) do
  .board 
    - if task.eyecatch.attached?
      .board_image
        = image_tag task.eyecatch
    .board_title
      = task.title
    .board_content
      = task.content
    .board_detail
      = image_tag 'Oval.png'
      = task.deadline
      %div
        %p= task.author_name
       